<UserControl x:Class="Shops_Content_Degtinnikov.View.Items.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shops_Content_Degtinnikov.View.Items"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch"
             Margin="5">
    <UserControl.Resources>
        <Style TargetType="Button" x:Key="Update">
            <Setter Property="Background" Value="#FF4FC318"/>
            <Setter Property="BorderBrush" Value="#FF4FC318"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Button" x:Key="Delete">
            <Setter Property="Background" Value="#FFC34E18"/>
            <Setter Property="BorderBrush" Value="#FFC34E18"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.Effect>
            <DropShadowEffect Direction="270" BlurRadius="5" ShadowDepth="2" Opacity="0.5"/>
        </Grid.Effect>
        <Image Width="50" Height="50" Source="/Images/ic-item.png" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
        <Button Style="{StaticResource Update}" Content="Изменить" Width="55" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,72,0,0"  FontSize="10" Command="{Binding OnEdit}" >
            <Button.Effect>
                <DropShadowEffect Direction="270" BlurRadius="5" ShadowDepth="2" Opacity="0.5"/>
            </Button.Effect>
        </Button>
        <Button Style="{StaticResource Delete}" Height="25" Content="Удалить" VerticalAlignment="Top" 
                HorizontalAlignment="Left" Margin="10,102,0,0" Width="55" FontSize="10" Command="{Binding OnDelete}">
            <Button.Effect>
                <DropShadowEffect Direction="270" BlurRadius="5" ShadowDepth="2" Opacity="0.5"/>
            </Button.Effect>
        </Button>
        <Grid Margin="65,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Наименование" VerticalAlignment="Top" Margin="10,10,10,0"/>
            <TextBox Text="{Binding Name}" Height="28" VerticalAlignment="Top" Margin="10,36,10,0"
             VerticalContentAlignment="Center" IsEnabled="False" SpellCheck.IsEnabled="False"/>

            <Label Content="Стоимость" VerticalAlignment="Top" Margin="10,10,10,0" Grid.Column="1"/>
            <TextBox Text="{Binding Price}" Height="28" VerticalAlignment="Top" Margin="10,37,10,0"
             VerticalContentAlignment="Center"  IsEnabled="False" SpellCheck.IsEnabled="False" Grid.Column="1"/>

            <Label Content="Категория" VerticalAlignment="Top" Margin="10,67,10,0" Grid.ColumnSpan="2"/>
            <TextBox Text="{Binding Category.Name}" Height="28" VerticalAlignment="Top" Margin="10,92,9,0"
             VerticalContentAlignment="Center"  IsEnabled="False" SpellCheck.IsEnabled="False" Grid.ColumnSpan="2"/>

            <Label Content="Описание" VerticalAlignment="Top" Margin="10,120,10,0" Grid.ColumnSpan="2" Height="24"/>
            <TextBox Text="{Binding Description}"  IsEnabled="False" Margin="10,145,10,14" VerticalContentAlignment="Center"
             SpellCheck.IsEnabled="False" Grid.ColumnSpan="2"/>
        </Grid>
    </Grid>
</UserControl>
